<!DOCTYPE html>
<html>
  <head>
    <title>EnjoyTheMovie</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="container-fluid">
    <header class="page-header wrapper">
      <h4 class="heading">
        Enjoy the movie!
      </h4>
      <nav>
        <ul class="nav-list">
        <% if user_signed_in? %>
          <li class="nav-list-item">
            <%= link_to "マイページ", user_user_path(current_user) %>
          </li>
          <li class="nav-list-item">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
          </li>
          <li class="nav-list-item">
            <%= link_to "検索フォーム", user_movies_path %>
          </li>
        <% elsif admin_signed_in? %>
          <li class="nav-list-item">
            <%= link_to "ジャンル登録", admin_genres_path %>
          </li>
          <li class="nav-list-item">
            <%= link_to "映画登録", new_admin_movie_path %>
          </li>
          <li class="nav-list-item">
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
          </li>
          <li class="nav-list-item">
            <%= link_to "映画一覧", admin_movies_path %>
          </li>
          <li class="nav-list-item">
            <%= link_to "ユーザー一覧", admin_users_path %>
          </li>
          <li class="nav-list-item">
            <%= link_to "画像検索", admin_pictures_search_path %>
          </li>
          <li class="nav-list-item">
            <%= link_to "画像一覧", admin_pictures_path %>
          </li>
        <% else %>
          <li class="nav-list-item">
            <%= link_to "会員登録", new_user_registration_path %>
          </li>
          <li class="nav-list-item">
            <%= link_to "ログイン", new_user_session_path %>
          </li>
        <% end %>
        </ul>
      </nav>
    </header>
    <div class="main">
      <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
      <% end %>
      <%= yield %>
    </div>
    <footer></footer>
    </div>
  </body>
</html>
