<div class="box2">
  <div class="box3">

<h4>映画の新規登録</h4>
<%= form_with model:@movie, url:admin_movies_path, method: :post, local:true do |f| %>
  <%= f.label :title, "映画名" %>
  <%= f.text_field :title, :size=>"70", :placeholder => "(30文字まで)", :maxlength => "30" %><br>
  <%= f.label :director_name, "監督名" %>
  <%= f.text_field :director_name, :size=>"70", :placeholder => "(30文字まで)", :maxlength => "30" %><br>
  <%= f.label :genre, 'ジャンル名' %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %><br>
  <%= f.label :production_year, "制作年" %>
  <%= f.text_field :production_year, :size=>"30", :placeholder => "(10文字まで)", :maxlength => "10" %><br>
  <%= f.label :explanation, "映画の紹介" %><br>
  <%= f.text_area :explanation, cols:45, rows:5, :wrap => "hard", :placeholder => "(105文字まで)", :maxlength => "105" %><br>
  <%= f.submit "新規登録",class:"btn btn-sm btn-success" %>
<% end %>
  </div>
</div>
