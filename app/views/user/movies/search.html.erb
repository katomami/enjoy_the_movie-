<div class="box2">
  <div class="box3">
    <h2>検索結果</h2>
    <table>
        <% @results.each do |movie| %>
        <tr>
          <td><%= image_tag movie.picture.image_url, size: '40x60' %>
          《<%= movie.title %>》</td>
          <td>●制作年：<%= movie.production_year %>
          ●ジャンル：<%= movie.genre.name %></td>
          <td><%= link_to '詳細', user_movie_path(movie.id),class:"btn btn-sm btn-success" %></td>
        </tr>
        <tr>
          <td><br></td>
        </tr>
        <% end %>
    </table>
    <%= paginate @results %>
  </div>
</div>
