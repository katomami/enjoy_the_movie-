<div class="box2">
  <div class="box10">
    <table>
      <tr>
        <td>《<%= @review.user.nickname %>さん》</td>
      </tr>
      <tr>
        <td>●目的:<%= @review.purpose %></td>
      </tr>
      <tr>
        <td>
          <div class="star">
              <% if @review.star? %>
                <% for i in 1..@review.star do %>
                ★
                <% end %>
              <% end %>
          </div>
        </td>
        <td></td>
      </tr>
      <tr>
        <td>●<%= @review.comment_title %></td>
      </tr>
      <tr>
        <td><%=safe_join(@review.comment.split("\n"),tag(:br))%></td>
      </tr>
    </table>
    <div class="hidden_box">
      <label for="label1">クリックでネタバレ表示</label>
      <input type="checkbox" id="label1"/>
      <div class="hidden_show">
        <span style="margin-right:4em;"></span><%=safe_join(@review.spoiler.split("\n"),tag(:br))%>
      </div>
    </div>
    <%= link_to 'レビュー一覧へ', user_movie_path(@movie), class:"btn btn-sm btn-success" %>
  </div>
</div>
